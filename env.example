# AvyaHub Central de Ajuda - Exemplo de configuração .env

# Banco de dados
DB_HOST=localhost
DB_NAME=avyahub_help
DB_USER=root
DB_PASS=

# Caminho base da aplicação (ex: /ajuda, vazio para domínio raiz ou subdominio)
BASE_PATH=/ajuda

# URL do site (opcional). Se vazio, BASE_URL será detectada automaticamente
SITE_URL=

# Uploads
UPLOADS_DIR=uploads/
MAX_UPLOAD_SIZE=5242880

# Ambiente
APP_ENV=development
APP_DEBUG=true
APP_TIMEZONE=America/Sao_Paulo

# Cache
ENABLE_CACHE=true
CACHE_DURATION=3600

# Segurança
# Gere uma chave forte em produção (32 bytes hex): php -r "echo bin2hex(random_bytes(32));"
APP_SECRET_KEY=change_this_secret_key
