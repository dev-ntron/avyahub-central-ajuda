RewriteEngine On

# Se estiver em subpasta, ajuste aqui (ex.: /ajuda). Se raiz, deixe vazio
RewriteBase /

# Redirecionar para HTTPS (descomente se necessário)
# RewriteCond %{HTTPS} off
# RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Permitir installer enquanto NÃO existir install/.installed
RewriteCond %{REQUEST_URI} ^/install [NC]
RewriteCond %{DOCUMENT_ROOT}/install/.installed !-f
RewriteRule ^install/(.*)$ install/$1 [L]

# Bloquear acesso ao installer DEPOIS que o arquivo .installed existir
RewriteCond %{REQUEST_URI} ^/install [NC]
RewriteCond %{DOCUMENT_ROOT}/install/.installed -f
RewriteRule ^install/ - [F,L]

# Admin routes
RewriteCond %{REQUEST_URI} ^/admin/?(.*)$ [NC]
RewriteRule ^admin/?(.*)$ index.php [QSA,L]

# API routes
RewriteCond %{REQUEST_URI} ^/api/(.*)$ [NC]
RewriteRule ^api/(.*)$ api/$1 [QSA,L]

# Public routes - artigos
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} !^/admin [NC]
RewriteCond %{REQUEST_URI} !^/api [NC]
RewriteCond %{REQUEST_URI} !^/install [NC]
RewriteRule ^([^/]+)/?$ index.php?path=$1 [QSA,L]

# Bloquear acesso a arquivos sensíveis
<FilesMatch "\.(inc|conf|config|env)$">
    Require all denied
</FilesMatch>

# Cache de assets
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/jpg "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
</IfModule>

# Compressão GZIP
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
</IfModule>
